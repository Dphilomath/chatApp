<%- include('../partials/header') %>


<div class="container home">
  <h2 style="padding-bottom: 2rem;">Create a new Chatroom</h2>
  <form method="POST" action="/chat">
    <div class="form-group">
      <input class="form-control" id="chatroom" name="chatroom" autofocus placeholder="Enter room name">
    </div>
    <div class="alert alert-info alert-dismissible fade" style="display: none;" role="alert">
      <strong>Chatroom already exists!</strong> Choose a different name or join the existing one.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" id="Username" placeholder="Choose a Username" name="user">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<script>
  if( <%=valid %>==false){
     document.getElementsByClassName("alert")[0].classList.add("show");
     document.getElementsByClassName("alert")[0].style.display = "block";
  }
</script>
