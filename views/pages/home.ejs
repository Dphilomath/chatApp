<%- include('../partials/header') %>
<!-- <div class="overflow"> -->
  <div class="container" style="margin-top: 20%; position: fixed;">
    <h2 style="padding-bottom: 2rem;">Welcome to ChatApp</h2>
    <form action="/chat" method="POST">
        <div class="form-group">
          <input type="text" name="user" required class="form-control" placeholder="Username">
        </div>
        <div class="form-group">
            <select required class="form-control" name="chatroom">
                <option value="">Select Chat Room</option>
                <option value="cricket">Cricket</option>
                <option value="football">Football</option>
                <option value="music">Music</option>
            </select>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
  </div>
