<%- include('../partials/header') %>
<div class="overflow-auto">
  <div class="container">
    <h2>Welcome to ChatApp</h2>
    <form action="/chat" method="POST">
        <div class="form-group">
          <input type="text" name="user" required class="form-control" id="formGroupExampleInput2" placeholder="Username">
        </div>
        <div class="form-group">
            <select required class="form-control" name="chatroom" id="formGroupExampleInput3">
                <option value="">Select Chat Room</option>
                <option value="cricket">Cricket</option>
                <option value="football">Football</option>
                <option value="music">Music</option>
            </select>
        </div>
        <input type="submit">
    </form>
  </div>
</div>
