                <option value="cricket">Cricket</option>
                <option value="football">Football</option>
                <option value="music">Music</option>
            </select>
        </div> -->
        <div class="form-group">
          <input class="form-control" id="chatroom" name="chatroom"  placeholder="Enter room name">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="key" name="key" required  placeholder="Enter Key">
        </div>
        <div class="alert alert-warning alert-dismissible fade" style="display: none;" role="alert">
          <strong>Invalid key!</strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <button class="btn btn-primary">Submit</button>
        <a href="/newroom">Create new Chatroom</a>
    </form>
